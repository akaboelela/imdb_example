<div class="page-header">
  <h3>Direction #<%= @direction.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Director</dt>
      <dd><%= @direction.director_id %></dd>

      <dt>Actor</dt>
      <dd><%= @direction.actor_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
